# to fuzz libtorrent, you need a recent version of clang (clang 5.0 from homebew
# does not include libFuzzer as of this writing, maybe the next package will).

# if you have a favourite component to fuzz, you can run that specific binary
# without specifying the "-runs=" argument, it's probably a good idea to seed
# the fuzzing with the included corpus though

import feature : feature ;
import testing ;

use-project /torrent : libtorrent ;

feature fuzz : off on : composite propagated link-incompatible ;
feature.compose <fuzz>on : <cflags>-fsanitize=fuzzer <linkflags>-fsanitize=fuzzer ;

feature san : off on memory thread : composite propagated link-incompatible ;
feature.compose <san>on : <cflags>-fsanitize=address <linkflags>-fsanitize=address <cflags>-fsanitize=undefined <cflags>-fsanitize-undefined-trap-on-error <linkflags>-fsanitize=undefined <linkflags>-fsanitize-undefined-trap-on-error ;
feature.compose <san>thread : <cflags>-fsanitize=thread <linkflags>-fsanitize=thread ;
feature.compose <san>memory : <cflags>-fsanitize=memory <linkflags>-fsanitize=memory ;

project fuzz-tests
	: requirements
	<fuzz>on
	<export-extra>on
	<define>TORRENT_USE_ASSERTS=1
	<define>TORRENT_USE_IPV6=1
	<define>_SCL_SECURE=1
	<define>_GLIBCXX_DEBUG
	<cxxflags>-fno-omit-frame-pointer
	<linkflags>-fno-omit-frame-pointer
	<library>/torrent//torrent/<debug-iterators>on/<export-extra>on/<asserts>on
	: default-build
	<link>static
	<variant>release
	<debug-symbols>on

# run this with as many sanitizers as possible
	<san>on
#	<san>memory
	;

run src/torrent_info.cpp          : -runs=9000000 -timeout=10 -rss_limit_mb=6096 -artifact_prefix=./torrent_info- corpus/torrents ;
run src/parse_magnet_uri.cpp      : -runs=9000000 -timeout=10 -artifact_prefix=./parse_magnet_uri- corpus/magnetlinks ;
run src/bdecode_node.cpp          : -runs=9000000 -timeout=10 -rss_limit_mb=4096 -artifact_prefix=./bdecode_node- corpus/torrents ;
run src/lazy_bdecode.cpp          : -runs=9000000 -timeout=10 -rss_limit_mb=4096 -artifact_prefix=./lazy_bdecode- corpus/torrents ;
run src/parse_int.cpp             : -runs=9000000 -timeout=10 -artifact_prefix=./parse_int- corpus/parse_int ;
run src/sanitize_path.cpp         : -runs=9000000 -timeout=10 -artifact_prefix=./sanitize_path- corpus/sanitize_path ;
run src/escape_path.cpp           : -runs=9000000 -timeout=10 -artifact_prefix=./escape_path- corpus/escape_path ;
run src/file_storage_add_file.cpp : -runs=9000000 -timeout=10 -artifact_prefix=./file_storage_add_file- corpus/add_file ;
run src/base32decode.cpp          : -runs=9000000 -timeout=10 -artifact_prefix=./base32decode- corpus/base32 ;
run src/base32encode.cpp          : -runs=9000000 -timeout=10 -artifact_prefix=./base32encode- corpus/base32encode ;
run src/base64encode.cpp          : -runs=9000000 -timeout=10 -artifact_prefix=./base64encode- corpus/base64encode ;
run src/escape_string.cpp         : -runs=9000000 -timeout=10 -artifact_prefix=./escape_string- corpus/escape_string ;
run src/gzip.cpp                  : -runs=9000000 -timeout=10 -artifact_prefix=./gzip- corpus/gzip ;
run src/verify_encoding.cpp       : -runs=9000000 -timeout=10 -artifact_prefix=./verify_encoding- corpus/utf8 ;
run src/convert_to_native.cpp     : -runs=9000000 -timeout=10 -artifact_prefix=./convert_to_native- corpus/utf8 ;
run src/convert_from_native.cpp   : -runs=9000000 -timeout=10 -artifact_prefix=./convert_from_native- corpus/utf8 ;
run src/utf8_wchar.cpp            : -runs=9000000 -timeout=10 -artifact_prefix=./utf8_wchar- corpus/utf8 ;
run src/wchar_utf8.cpp            : -runs=9000000 -timeout=10 -artifact_prefix=./wchar_utf8- corpus/utf8 ;
run src/utf8_codepoint.cpp        : -runs=9000000 -timeout=10 -artifact_prefix=./utf8_codepoint- corpus/utf8 ;
run src/http_parser.cpp           : -runs=9000000 -timeout=10 -artifact_prefix=./http_parser- corpus/http ;
run src/upnp.cpp                  : -runs=9000000 -timeout=10 -artifact_prefix=./upnp- corpus/xml ;
run src/dht_node.cpp              : -runs=9000000 -timeout=10 -artifact_prefix=./dht_node- corpus/dht ;
run src/utp.cpp                   : -runs=9000000 -timeout=10 -rss_limit_mb=6096 -artifact_prefix=./utp- corpus/utp ;
run src/resume_data.cpp           : -runs=9000000 -timeout=10 -rss_limit_mb=6096 -artifact_prefix=./resume- corpus/resume ;
